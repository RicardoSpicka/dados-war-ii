<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    android:gravity="center">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:layout_gravity="center"
        android:paddingVertical="20dp">

        <RelativeLayout
            android:id="@+id/dadosamarelos"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/azujatola01"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:background="@drawable/jato02"
                android:clickable="true" />

            <TextView
                android:id="@+id/amalose1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_toRightOf="@id/azujatola01"
                android:fontFamily="@font/font"
                android:text="PERDEU"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/amalose"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@id/azujatola01"
                android:fontFamily="@font/font"
                android:text="3"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="40dp" />



            <ImageView
                android:id="@+id/amarelo01"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:clickable="true"
                android:background="@drawable/amarelo01" />

            <ImageView
                android:id="@+id/amarelo02"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/amarelo02"
                android:layout_toLeftOf="@+id/amarelo01"/>

            <ImageView
                android:id="@+id/amarelo03"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/amarelo03"
                android:layout_toLeftOf="@+id/amarelo02" />

        </RelativeLayout>

        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dadosamarelos"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:fontFamily="@font/font"
            android:text="DADOS PARA WAR II"
            android:textColor="@android:color/black"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/separador1"
            android:layout_width="100dp"
            android:layout_height="4dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/dadosamarelos"
            android:background="#070505" />

        <TextView
            android:id="@+id/separador2"
            android:layout_width="100dp"
            android:layout_height="4dp"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/dadosamarelos"
            android:layout_alignParentRight="true"
            android:background="#070505" />

        <RelativeLayout
            android:id="@+id/dadovermelhos"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/titulo"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/azulobola01"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:background="@drawable/azul01"
                android:clickable="true" />

            <TextView
                android:id="@+id/vermlose1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_toRightOf="@id/azulobola01"
                android:fontFamily="@font/font"
                android:text="PERDEU"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/vermlose"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@id/azulobola01"
                android:fontFamily="@font/font"
                android:text="3"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="40dp" />

            <ImageView
                android:id="@+id/vermelho01"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:background="@drawable/vermelho03" />

            <ImageView
                android:id="@+id/vermelho02"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="30dp"
                android:layout_toLeftOf="@+id/vermelho01"
                android:background="@drawable/vermelho02" />

            <ImageView
                android:id="@+id/vermelho03"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="30dp"
                android:layout_toLeftOf="@+id/vermelho02"
                android:background="@drawable/vermelho05" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dadovermelhos"
            android:layout_centerInParent="true">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ZERAR"
                android:layout_marginTop="10dp"
                android:onClick="again"
                android:fontFamily="@font/font"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dadovermelhos"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/font"
                android:onClick="sair"
                android:text="SAIR"/>


        </LinearLayout>



    </RelativeLayout>

</LinearLayout>